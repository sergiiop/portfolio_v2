---
import { EducationQualityData } from '../../mocks/data'
import EducationItem from '../EducationItem/EducationItem.astro'
---

<div class='education-items--container'>
	{EducationQualityData.map((item, index) => <EducationItem key={index} education={item} />)}
</div>

<style>
	.education-items--container {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		width: 100%;
	}

	@media (min-width: 55em) {
		.education-items--container {
			width: 80%;
		}
	}
</style>
