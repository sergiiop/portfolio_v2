---
const { education } = Astro.props
---

<section class='education-item--container'>
	<div year={education.year} class='education-title--container'>
		<h2 class='ff-bold fw-black fs-650'>{education.title}</h2>
	</div>
	<div class='education-content--container'>
		<h4 class='ff-bold fw-bold fs-600'>
			{education.subtitle}
		</h4>
		<p data-width='wide'>{education.description}</p>
		<a class='cta-credential' href={education.credential} target='_blank'>
			<span class='circle' aria-hidden='true'>
				<span class='icon arrow'></span>
			</span>
			<span class='button-text'>View Credential</span>
		</a>
	</div>
</section>

<style>
	.education-item--container {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.education-title--container {
		padding-left: 4rem;
		position: relative;
		display: flex;
		align-items: center;
	}

	.education-title--container::before {
		content: '';
		position: absolute;
		width: 1rem;
		height: 1rem;
		left: 2.5rem;
		border-radius: 50%;
		box-shadow: 0px 0px 20px 6px hsl(var(--clr-secund));
	}

	.education-title--container::after {
		content: attr(year);
		position: absolute;
		color: hsl(var(--clr-almost-dark));
		font-weight: bolder;
		background: hsl(var(--clr-secund));
		left: -2px;
		clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%);
		display: flex;
		align-items: center;
		padding-left: 4px;
		width: 36px;
		height: 18px;
		font-size: 0.65rem;
	}

	.education-content--container > h4 {
		margin-bottom: 4px;
		color: hsl(var(--clr-secund));
	}

	.education-content--container {
		border-left: 2px solid hsl(var(--clr-secund));
		margin-inline-start: 3rem;
		padding-inline-start: 1rem;
	}

	@media (min-width: 55em) {
		.education-content--container {
			margin-inline-start: 4.2rem;
			padding-inline-start: 2.5rem;
		}
		.education-title--container::after {
			width: 48px;
			left: -2px;
			height: 24px;
			font-size: 0.85rem;
		}
		.education-title--container::before {
			width: 1.4rem;
			height: 1.4rem;
			left: 3.5rem;
		}

		.education-title--container {
			padding-left: 6rem;
		}
	}

	/* From uiverse.io by @alexmaracinaru */
	/* From uiverse.io by @satyamchaudharydev */
	/* From uiverse.io */
	.cta-credential {
		position: relative;
		display: inline-block;
		cursor: pointer;
		outline: none;
		border: 0;
		vertical-align: middle;
		text-decoration: none;
		background: transparent;
		padding: 0;
		font-size: inherit;
		font-family: inherit;
		margin-top: 0.5rem;
	}

	.cta-credential {
		width: 14rem;
		height: auto;
	}

	.cta-credential .circle {
		transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
		position: relative;
		display: block;
		margin: 0;
		width: 3rem;
		height: 3rem;
		background: hsl(var(--clr-secund));
		border-radius: 1.625rem;
	}

	.cta-credential .circle .icon {
		transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
		position: absolute;
		top: 0;
		bottom: 0;
		margin: auto;
		background: hsl(var(--clr-white));
	}

	.cta-credential .circle .icon.arrow {
		transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
		left: 0.625rem;
		width: 1.125rem;
		height: 0.125rem;
		background: none;
	}

	.cta-credential .circle .icon.arrow::before {
		position: absolute;
		content: '';
		top: -0.29rem;
		right: 0.0625rem;
		width: 0.625rem;
		height: 0.625rem;
		border-top: 0.125rem solid hsl(var(--clr-white));
		border-right: 0.125rem solid hsl(var(--clr-white));
		transform: rotate(45deg);
	}

	.cta-credential .button-text {
		transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		padding: 0.75rem 0;
		margin: 0 0 0 1.85rem;
		color: hsl(var(--clr-secund));
		font-weight: 700;
		line-height: 1.6;
		text-align: center;
		text-transform: uppercase;
	}

	.cta-credential:hover .circle {
		width: 100%;
	}

	.cta-credential:hover .circle .icon.arrow {
		background: hsl(var(--clr-white));
		transform: translate(1rem, 0);
	}

	.cta-credential:hover .button-text {
		color: hsl(var(--clr-white));
	}
</style>
